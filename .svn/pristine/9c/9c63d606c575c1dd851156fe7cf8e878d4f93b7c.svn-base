ion-header{
  ion-grid{
    padding: 0px;
    background: #95a6b1;
    color: white;
    ion-row{
      ion-col{
        padding: 0px;
        background: #95a6b1;
        ion-item{
          width: 100%;
        }
      }
      ion-toolbar{
        padding: 0px;
      }
    }
  }
}

ion-content{
  ion-grid{
    ion-row{
      ion-col{
        ion-list{
          background: none;
          height: 80px;
          ion-item{
            margin-bottom: 40px;
            border-radius: 15px;
            font-size: 16.4px;
            font-weight: bold;
            --min-height: 70px;
          }
        }
        & .tituloOpcion{
          text-align: center;
          margin-bottom: 30px;
        }
      }
    }
  }
  ion-card {
    margin-bottom: 30px;
    ion-item{
      ion-grid{
        padding: 0px;
        ion-row{
          ion-col{
            padding: 0px;
            p {
              margin: 0px;
            }
            ion-button{
              --border-radius: 50px;
            }
          }
        }
      }
    }
  }
}

.titulo{
  width: 100% !important;
  font-size: 20px !important;
  text-align: left;
  padding: 0px;
  padding-top: 10px;
  margin-top: 10px;
}
.imgMenu{
  width: 100% !important;
  height: 145% !important;
  transform: translateY(-8px);
}