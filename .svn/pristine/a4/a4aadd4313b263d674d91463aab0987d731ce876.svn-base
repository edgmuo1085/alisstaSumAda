<ion-header>
  <ion-grid>
    <ion-row>
      <ion-col size="2">
        <ion-toolbar color="tertiary">
          <ion-buttons slot="start">
            <ion-back-button color="primary" mode="md" defaultHref="/"></ion-back-button>
          </ion-buttons>
        </ion-toolbar>
      </ion-col>
      <ion-col size="10">
        <ion-title class="titulo">Actas por enviar</ion-title>
      </ion-col>
    </ion-row>
  </ion-grid>
</ion-header>


<ion-content class="ion-padding">

  <ion-searchbar animated color="primary" placeholder="Buscar" (ionChange)="search($event)"></ion-searchbar>

  <ion-slides mode="ios" *ngIf="!listAdvisory?.length">
    <!-- <ion-slides mode="ios" *ngIf="showListPendingVisit"> -->
    <ion-slide>
      <ion-grid>
        <ion-row>
          <ion-col size="12">
            <div class="ion-text-center">
              <img class="imgIcono" src="../../../assets/icon/icono_observaciones.svg" alt="">
            </div>
          </ion-col>
        </ion-row>
        <ion-row>
          <ion-col size="12">
            <strong>
              <h1 class="tituloSlide">
                No tiene actas de asesoría por enviar.
              </h1>
            </strong>
          </ion-col>
        </ion-row>
      </ion-grid>
    </ion-slide>
  </ion-slides>

  <ion-list>
    <ion-item color="secondary" *ngFor="let AdvisoryAct of listAdvisory; let i = index">
      <ion-grid>
        <ion-row>
          <ion-col size="12">
            <ion-row>
              <ion-col size="12">
                <p><strong>Razón Social</strong> {{AdvisoryAct.infoCompany.nombre}}</p>
              </ion-col>
            </ion-row>
            <ion-row>
              <ion-col size="12">
                <p>
                  <strong>Identificación Empresa</strong>
                  {{AdvisoryAct.infoCompany.tipoDocumento}} - {{AdvisoryAct.infoCompany.numeroDocumento}}
                </p>
              </ion-col>
            </ion-row>
            <ion-row>
              <ion-col size="12">
                <p> <strong>Fecha de creación</strong> {{AdvisoryAct.infoSurveyQR.dateCreatedSurvey | date: 'medium' }}
                </p>
              </ion-col>
            </ion-row>
            <ion-row>
              <ion-col size="12">
                <ion-item lines="none">
                  <p><strong>Seleccionar Acta de Asesoría</strong></p>
                  <ion-checkbox slot="end" color="primary" (ionChange)="actaSeleccionada($event, AdvisoryAct)"></ion-checkbox>
                </ion-item>
              </ion-col>
            </ion-row>
          </ion-col>
        </ion-row>
      </ion-grid>
    </ion-item>
  </ion-list>

  <ion-grid>
    <ion-row>
      <ion-col size="3"></ion-col>
      <ion-col size="6" *ngIf="actas.length">
        <img class="btnEnviar" (click)="sendTasks()" src="../../../assets/icon/boton_enviar.png" alt="enviar">
      </ion-col>
      <ion-col size="3"></ion-col>
    </ion-row>
  </ion-grid>

</ion-content>