<ion-header class="ion-no-border">
  <ion-toolbar color="tertiary">
    <ion-grid>
      <ion-row>
        <ion-col size="12">
          <ion-title class="titulo">Reenvíar código de verificación</ion-title>
        </ion-col>
      </ion-row>
    </ion-grid>
  </ion-toolbar>
</ion-header>

<ion-content class="ion-padding backgroundContent">

  <!-- <ion-searchbar *ngIf="listaResponsables.length > 0" animated debounce="250"  color="primary" placeholder="Buscar" (ionChange)="search($event)"></ion-searchbar> -->

  <ion-slides mode="ios" *ngIf="listaResponsables.length === 0 || undefined">
    <!-- <ion-slides mode="ios" *ngIf="showListPendingVisit"> -->
    <ion-slide>
      <ion-grid>
        <ion-row>
          <ion-col size="12">
            <div class="ion-text-center">
              <img src="../../../assets/icon/icono_observaciones.svg" alt="">
            </div>
          </ion-col>
        </ion-row>
        <ion-row>
          <ion-col size="12">
            <strong>
              <p class="tituloSlide">
                  No tienes actividades migradas, por ende, no existe una lista de responsables para reenvíar el código de verificación
              </p>
            </strong>
          </ion-col>
        </ion-row>
      </ion-grid>
    </ion-slide>
  </ion-slides>

 <div *ngIf="listaResponsables.length > 0">
  <ion-grid fixed>
    <ion-row>
      <ion-col size="2">
      </ion-col>
      <ion-col size="5">
        <ion-label>
          <strong>Nombre</strong>
        </ion-label>
      </ion-col>
      <ion-col size="5">
        <ion-label>
          <strong>Correo</strong>
        </ion-label>
      </ion-col>
    </ion-row>
  </ion-grid>

  <ion-grid fixed>
    <ion-row *ngFor="let responsable of listaResponsables | searchResendCode: textoBuscar: ['nombre', 'correoElecctronico'] ; let i = index " >
      <ion-col size="2">
        <ion-checkbox (click)="selectResponsible(responsable)" mode="ios"></ion-checkbox>
      </ion-col>
      <ion-col size="5">
        <ion-label>{{responsable.listaResponsables.Nombre}}</ion-label>
      </ion-col>
      <ion-col size="5">
        <ion-label>{{responsable.listaResponsables.correo}}</ion-label>
      </ion-col>
    </ion-row>
  </ion-grid>
 </div>

</ion-content>

<ion-footer no-border>
  <ion-toolbar>
    <ion-buttons slot="start">
      <ion-button color="secondary" expand="block" (click)="regresar()">
        <ion-label>Regresar</ion-label>
      </ion-button>
    </ion-buttons>
    <ion-buttons slot="end">
      <ion-button color="primary" expand="block" (click)="resendCode()">
        <ion-label>Reenvíar código</ion-label>
      </ion-button>
    </ion-buttons>
  </ion-toolbar>
</ion-footer>