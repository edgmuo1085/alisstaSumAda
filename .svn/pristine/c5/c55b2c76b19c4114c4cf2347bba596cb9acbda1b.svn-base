ion-header{
  ion-grid{
    padding: 0px;
    background: #95a6b1;
    color: white;
    ion-row{
      ion-col{
        padding: 0px;
        background: #95a6b1;
      }
      ion-toolbar{
        padding: 0px;
      }
      ion-button {
        --border-radius: 50px;
      }
    }
  }
}


.result-selector {
  & .result-wrapper {
    border: 2px var(--ion-color-primary) solid;

    & .btn {
      padding-left: 50px;
      padding-right: 50px;
    }
  }
}


.titulo{
  width: 100% !important;
  font-size: 18px !important;
  text-align: left;
  padding-top: 15px;
  padding: 0px;
  margin-top: 15px;
}