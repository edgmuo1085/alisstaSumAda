<ion-header>
  <ion-grid>
    <ion-row>
      <ion-col size="2">
        <ion-toolbar color="tertiary">
          <ion-buttons slot="start">
            <ion-back-button color="primary" mode="md" defaultHref="/"></ion-back-button>
          </ion-buttons>
        </ion-toolbar>
      </ion-col>
      <ion-col size="10">
        <ion-title class="titulo">Observaciones y recomendaciones</ion-title>
      </ion-col>
    </ion-row>
  </ion-grid>
</ion-header>

<ion-content>

  <!-- Selector del resultado de la visita -->
  <div class="mt-5 text-center result-selector">

    <div class="ion-text-center" style="width: 100%;">
      <h3>¿La asesoría fue exitosa?</h3>
    </div>

    <span class="result-wrapper d-inline-block rounded">
      <!-- Exitosa -->
      <button class="btn transparent rounded ion-text-md-uppercase"
        [ngClass]="{primary: subframe === SUCCESS_FRAME, transparent: subframe !== SUCCESS_FRAME}"
        (click)="switchFrame(SUCCESS_FRAME)">
        Sí
      </button>

      <!-- Fallida -->
      <button class="btn primary rounded ion-text-md-uppercase"
        [ngClass]="{primary: subframe === FAIL_FRAME, transparent: subframe !== FAIL_FRAME}"
        (click)="switchFrame(FAIL_FRAME)">
        No
      </button>
    </span>
  </div>

  <!-- Resultados de la visita -->
  <ng-container [ngSwitch]="subframe">
    <!-- Exitosa -->
    <app-success [typeMenu]="subframe" (infoCommentSuccess)="getInfoComment($event)" *ngSwitchCase="SUCCESS_FRAME">
    </app-success>

    <!-- Fallida -->
    <app-fail [typeMenu]="subframe" (infoCommentFail)="getInfoComment($event)" *ngSwitchCase="FAIL_FRAME"></app-fail>
  </ng-container>

</ion-content>