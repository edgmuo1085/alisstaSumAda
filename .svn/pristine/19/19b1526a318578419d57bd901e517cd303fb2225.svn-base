ion-header {
  & ion-toolbar {
    padding: 10px;
    --background: var(--ion-color-medium);
    --color: var(--ion-color-medium-contrast);

    & .title {
      text-overflow: initial;
      white-space: break-spaces;
      text-align: center;
      font-size: 1.3rem;
    }
  }
}

ion-content {
  & ion-card {
    & ion-list {
      padding: 0;
      background-color: transparent;

      & ion-item {
        --padding-start: 0;
        --inner-padding-end: 0;
        --background: inherit;
        --highlight-height: 0;
        --background: transparent;

        & ion-label {
          opacity: 1;
          transform: translateY(0) scale(1);
          white-space: break-spaces;
        }

        & ion-input {
          & ::ng-deep {
            & .native-input {
              opacity: 1;
            }
          }
        }

        & ion-input,
        & ion-select {
          border-radius: 5px;
          border: 1px solid var(--ion-color-dark);
          --padding-start: 1rem;
          --padding-end: 1rem;
          background-color: var(--ion-color-light);
          color: var(--ion-color-light-contrast);
        }

        & .invalid-feedback {
          color: var(--ion-color-danger);
          margin-top: 0.5rem;
        }
      }
    }

    & .actions-wrapper {
      display: flex;
      justify-content: space-around;
    }
  }
}
