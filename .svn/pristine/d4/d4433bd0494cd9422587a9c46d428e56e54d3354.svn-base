<app-header></app-header>

<ion-content class="backgroundContent">
  <ion-grid>
    <ion-row>
      <ion-col size="4" *ngFor="let menuOpt of optMenuOptions | async; let i = index">
        <ion-card mode="ios" (click)="optionSelectedMenu(menuOpt)" [routerLink]="menuOpt.redirecTo">
          <div class="vertical-center">
            <div class="center">
              <img [src]="menuOpt.icon" alt="">
            </div>
          </div>
          <ion-label>
            <h4 class="tituloOpcion">{{menuOpt.title}}</h4>
          </ion-label>
        </ion-card>
      </ion-col>

    </ion-row>
  </ion-grid>

  <ion-grid>
    <ion-row>
      <ion-col size="4" (click)="optionSelectedMenu(menuOptHelp)"
        *ngFor="let menuOptHelp of optMenuHelpOptions | async; let i = index">
        <div class="vertical-center">
          <div class="center">
            <img [src]="menuOptHelp.icon" alt="">
          </div>
        </div>
        <ion-label>
          <h4 class="tituloOpcion">{{menuOptHelp.title}}</h4>
        </ion-label>
      </ion-col>
    </ion-row>
  </ion-grid>

</ion-content>