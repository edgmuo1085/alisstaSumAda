<ion-content>

  <ion-list lines="none">
    <!-- Observaciones y recomendaciones -->
    <form [formGroup]="formSuccessComments">
      <ion-item class="p-0">
        <ion-label position="stacked">Observaciones y recomendaciones</ion-label>
        <ion-textarea type="text" maxlength="2000" placeholder="Observaciones y/o recomendaciones..."
          formControlName="descriptionSuccess" class="bg-light mt-3 pl-1" rows="5"></ion-textarea>
      </ion-item>
    </form>

    <span>{{ contador }}/2000</span>

    <!-- BotÃ³n de continuar -->
    <div class="ion-text-center mt-5">
      <ion-button color="primary" (click)="next()">Continuar</ion-button>
    </div>
  </ion-list>

</ion-content>