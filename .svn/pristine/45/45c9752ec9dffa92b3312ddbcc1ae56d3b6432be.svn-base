ion-searchbar {
  --border-radius: 30px;
}

ion-header {
  ion-grid {
    ion-row {
      ion-col {
        ion-toolbar {
          padding: 0px;
          --background: transparent;
        }
      }
    }
  }
}
ion-item {
  margin-bottom: 10px;
  border-radius: 15px;
}

ion-content {
  ion-slides {
    height: 90%;
    border: 1px solid #344b56;
    border-radius: 50px;
    margin-top: -15px;
    ion-slide {
      ion-grid {
        ion-row {
          ion-col {
            & .titulo {
              margin-top: -30px;
              font-weight: bold;
              color: #344b56;
            }
            & .imgIcono {
              width: auto !important;
              max-width: 65% !important;
              height: auto !important;
              max-height: 65% !important;
            }
            ion-icon {
              width: 100%;
              height: 40px;
              margin-bottom: 30px;
            }
          }
        }
      }
    }
  }

  & ion-list {
    margin-bottom: 100px;
    background-color: transparent;
  }
}

.labelEnProceso {
  text-align: end !important;
  font-size: 13px !important;
  margin-top: 5px !important;
}

.nombre-modulo {
  color: var(--ion-color-primary);
}

cdk-virtual-scroll-viewport {
  height: 100%;
  width: 100%;

  &::ng-deep {
    & .cdk-virtual-scroll-content-wrapper {
      width: 100%;
    }
  }
}